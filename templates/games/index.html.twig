{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="card bg-light">
                    <div class="card-header d-flex justify-content-between  bg-dark text-white">
                        <div>
                            <h5 class="">Game</h5>
                        </div>
                        <div>
                            <a class="mr-0" href="{{ path('categories_new') }}">Crear nueva categoría</a>
                        </div>
                        <div>
                            <a class="mr-0" href="{{ path('games_new') }}">Crear nuevo juego</a>
                        </div>
                    </div>

                    <div class="card-body">

                        <ul class="list-group">
                            {% for game in games %}
                                <div class="card list-group-item ">
                                    <div class="card-body">
                                        <ul class="list-group">
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Imagen</h6></div>
                                                <div class="lead"><img class="img-fluid w-25"  src="{{ game.getImage() }}" alt="portada" /></div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Nombre</h6></div>
                                                <div class="lead">{{ game.getName() }}</div >
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Precio</h6></div>
                                                <div class="lead">{{ game.getPrice() }}€</div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Valoración</h6></div>
                                                <div class="lead">{{ game.getRating() }}</div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Descripción</h6></div>
                                                <div class="lead">{{ game.getDescription() }}</div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Año de lanzamiento</h6></div>
                                                <div class="lead">{{ game.getYear() }}</div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Categoría</h6></div>
                                                {% for category in categories %}
                                                    {% if game.getCategoriesId() == category %}
                                                        <div class="lead">{{ category.getName() }}</div>
                                                    {% endif %}    
                                                {% endfor %}        
                                            </li>
                                            
                                            <li class="list-group-item pb-2 ml-auto border-left-0 border-right-0 border-bottom-0 ">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <a class="btn btn-outline-primary" href="{{ path('games_show', { 'id': game.id }) }}">
                                                            <span class="fa fa-info p-2"> </span>show
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="btn btn-outline-info" href="{{ path('games_edit', { 'id': game.id }) }}">
                                                            <span class="fa fa-edit p-2"> </span>edit
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <hr/>
                            {% endfor %}
                        </ul>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
